// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String   @id() @default(uuid())
  name            String
  expirationDate  DateTime
  manufactureDate DateTime
  createdAt       DateTime @default(now())
  updateAt        DateTime @updatedAt

  supplierOnProduct SupplierOnProduct[]
}

model Supplier {
  id    String @id() @default(uuid())
  name  String
  cnpj  String @unique
  phone String
  email String @unique

  addresses         Address[]
  supplierOnProduct SupplierOnProduct[]
}

model SupplierOnProduct {
  product    Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  String
  supplier   Supplier        @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  supplierId String
  assignedAt DateTime        @default(now())
  stocks     InventoryItem[]

  @@id([productId, supplierId])
}

model Address {
  id           String  @id() @default(uuid())
  street       String
  number       Int
  complement   String?
  neighborhood String
  city         String
  state        String
  country      String
  zipCode      String

  supplier    Supplier?  @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  supplierId  String?
  inventory   Inventory? @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
  inventoryId String?    @unique
}

model InventoryItem {
  id       String @id() @default(uuid())
  quantity Int

  inventory                   Inventory?         @relation(fields: [inventoryId], references: [id], onDelete: Cascade)
  inventoryId                 String?
  supplierOnProduct           SupplierOnProduct? @relation(fields: [supplierOnProductProductId, supplierOnProductSupplierId], references: [productId, supplierId], onDelete: Cascade)
  supplierOnProductProductId  String?
  supplierOnProductSupplierId String?
}

model Inventory {
  id   String @id() @default(uuid())
  name String

  address Address?
  items   InventoryItem[]
}
